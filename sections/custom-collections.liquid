
{% comment %}
  Category Feature Section
  Displays three featured categories with images and titles
{% endcomment %}

<div class="category-feature-section page-width">
  <div class="container">
    <div class="category-grid">
      {% for block in section.blocks %}
        <div class="category-item" {{ block.shopify_attributes }}>
          <div class="category-image">
            {% if block.settings.image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
              {% endif %}
              
              <img 
                src="{{ block.settings.image | image_url: width: 150 , height: 196 }}" 
                alt="{{ block.settings.image.alt | default: block.settings.title }}"
                loading="lazy"
                width="249"
                height="388"
              >
              
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            {% else %}
              <div class="placeholder-image">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>
          {% if block.settings.title != blank %}
          <div class="category-title">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
            {% endif %}
            
            <p>{{ block.settings.title | default: 'Category Title' }}</p>
            
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.category-feature-section {
  padding: 20px 0;
  overflow:hidden;
}


.category-grid {
  display: flex;
  flex-wrap:no-wrap;
  gap:10px;
  overflow-x:scroll;
  scrollbar-width: none; 
  -ms-overflow-style: none; 
}
.category-grid::-webkit-scrollbar {
  display: none; 
}

.category-item {
  max-width:160px;
  flex: 0 0 15%;
 
}

.category-item:hover {
  {% comment %} transform: translateY(-5px); {% endcomment %}
}

.category-image {
  margin-bottom: 5px; 
  
  overflow:hidden;
}

.category-image img {
  width: 100%;
  height: auto;
  max-width:150px;
  
  
}

.category-item:hover .category-image img {
  {% comment %} transform: scale(1.05); {% endcomment %}
}

.placeholder-image {
  aspect-ratio: 1;
  background-color: #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-svg {
  width: 80px;
  height: 80px;
  opacity: 0.5;
}

.category-title p {
  font-size: 14px;
  font-weight: 700;
  color: #333;
  margin: 0;
  text-align:left;
  transition: color 0.3s ease;
}

.category-title a {
  text-decoration: none;
  color: inherit;
}

/* Responsive Design */
@media (max-width: 768px) {
  .category-feature-section {
    padding: 40px 16px;
    padding-top:40px;
    padding-bottom:0;
  }
.category-grid {
 gap:10px;
}
  .category-item  {
    min-width:130px;
     
  }
 .category-feature-section.page-width {
   padding-left:0;
   padding-right:0;
}
  .category-title p {
    font-size: 14px;
    font-weight:500;
    letter-spacing: 1.5px;
  }
}



</style>

{% schema %}
{
  "name": "custom-collection-list",
  "tag": "section",
  "class": "section-category-feature",
  
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom-collection-list",
    }
  ]
}
{% endschema %}