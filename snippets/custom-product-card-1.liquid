    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }
  
  .color-swatch:hover {
    transform: scale(1.1);
    border-color: #999;
  }
  
  .color-swatch--selected {
    border: 1px solid #333 !important;
    box-shadow: 0 0 0 1px #fff, 0 0 0 2px #333;
  }
  
  .color-swatch__inner {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: inherit;
  }
  
  .color-swatch--count {
    background-color: #f5f5f5;
    color: #666;
    font-size: 10px;
    font-weight: 500;
    border: 1px solid #ddd;
    min-width: 20px;
    text-align: center;
    line-height: 1;
    padding: 0 2px;
  }
  
  .color-swatch--count:hover {
    background-color: #eeeeee;
    border-color: #999;
  }
  .custom-cart-button {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 53px;
    height: 54px;
